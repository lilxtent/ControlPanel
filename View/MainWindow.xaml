        <Button x:Name="butAddClient" Content="добавить клиента" HorizontalAlignment="Left" Margin="963,607,0,0" VerticalAlignment="Top" Width="119" Click="butAddClient_Click" Height="33"/>
        <Label Content="Поиск:" HorizontalAlignment="Left" Height="25" Margin="25,63,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="TextBoxSearch" HorizontalAlignment="Left" Height="25" Margin="80,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" TextChanged="TextBoxSearch_TextChanged"/>

        <StackPanel x:Name="spPayment" Margin="549,341,370,150"/>
        <Button x:Name="UpdateList" Content="Button" Margin="442,537,669,112" Click="UpdateList_Click"/>

    </Grid>
</Window>
