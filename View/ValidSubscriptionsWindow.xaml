<Window x:Class="ControlPanel.View.ValidSubscriptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel.View"
        mc:Ignorable="d"
        Title="Действующие абонементы" Height="450" Width="750">
    <Grid>
        <DataGrid x:Name="ValidSubscriptionsTable" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Path=ClientsName}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Абонемент" Binding="{Binding Path=SubscriptionType}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="руб/мес" Binding="{Binding Path=SubscriptionCost}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="оплачено до" Binding="{Binding Path=SubscriptionExpireDate, StringFormat='dd.MM.yyyy'}" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
