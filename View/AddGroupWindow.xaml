<Window x:Class="ControlPanel.View.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel.View"
        mc:Ignorable="d"
        Title="AddGroupWindow" Height="177" Width="406">
    <Grid>
        <Label x:Name="LabelTrainer" Content="Выберите тренера:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox x:Name="CbTrainers" HorizontalAlignment="Left" Margin="147,14,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelNameGroup" Content="Название группы:" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="TbGroup" HorizontalAlignment="Left" Margin="147,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
        <Button x:Name="ButtonSave" Content="Добавить" HorizontalAlignment="Left" Margin="290,107,0,0" VerticalAlignment="Top" Width="69" Height="22" Click="ButtonSave_Click"/>

    </Grid>
</Window>
