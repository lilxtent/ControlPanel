<Window x:Class="ControlPanel.View.PhotoCameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel.View"
        mc:Ignorable="d"
        Title="PhotoCameraWindow" Height="386" Width="526" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6" Background="#FFE5E5E5">
        <ListBox x:Name="lbCams" Margin="10,10,356,253" Loaded="lbCams_Loaded"/>
        <Button x:Name="butONCam" Content="выбрать" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Height="19" Width="58" Click="butONCam_Click" FontSize="10"/>
        <Image x:Name="imageCam" HorizontalAlignment="Left" Height="289" VerticalAlignment="Top" Width="289" Margin="195,10,0,0"/>
        <Button x:Name="ButPhotoSave" Content="Сфотать" HorizontalAlignment="Left" Margin="401,312,0,0" VerticalAlignment="Top" Click="ButPhotoSave_Click" Height="28" Width="69"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="328,312,0,0" VerticalAlignment="Top" Height="28" Width="68" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
